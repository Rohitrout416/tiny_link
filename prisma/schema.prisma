generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id            Int       @id @default(autoincrement())
  shortCode     String    @unique
  originalUrl   String
  clicks        Int       @default(0)
  lastClickedAt DateTime?
  createdAt     DateTime  @default(now())

  @@index([shortCode])
}
